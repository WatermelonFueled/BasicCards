<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/test_results_substack_width"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/test_item_margin"
    android:layout_marginTop="@dimen/test_item_margin"
    android:layout_marginBottom="@dimen/test_item_margin"
    android:background="@color/test_button_background">
    <TextView
        android:id="@+id/substack_results_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/test_results_text_small"
        android:maxLines="1"
        android:textAlignment="center"/>
    <com.watermelonfueled.basiccards.ResultsPieChartView
        android:id="@+id/substack_results_pie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>
    <TextView
        android:id="@+id/substack_results_percent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/test_results_text_small"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/substack_results_fraction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/test_results_text_small"
        android:textAlignment="center"/>
</LinearLayout>