<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stack_list_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/stack_list_item_padding"
    android:background="@color/backgroundWhite">
    <android.support.v7.widget.AppCompatCheckedTextView
        android:id="@+id/checkedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/stack_list_item_text_padding"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:checkMark="@drawable/checkbox"
        android:checkMarkTint="@color/colorPrimaryLight"
        android:textSize="@dimen/stack_list_item_text_size"
        android:textColor="@color/font_dark"
        android:includeFontPadding="false"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        android:checked="false" />
    <include layout="@layout/edit_delete_buttons"/>
</RelativeLayout>
