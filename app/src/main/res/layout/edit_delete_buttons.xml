<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton
        android:id="@+id/edit_button"
        android:onClick="editButtonOnClick"
        android:visibility="gone"
        android:src="@mipmap/ic_mode_edit_white_24dp"
        android:layout_width="@dimen/edit_button_height"
        android:layout_height="@dimen/edit_button_height"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/delete_button"
        android:background="@color/colorAccentLight" />
    <ImageButton
        android:id="@+id/delete_button"
        android:src="@mipmap/ic_delete_white_24dp"
        android:visibility="gone"
        android:layout_width="@dimen/edit_button_height"
        android:layout_height="@dimen/edit_button_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/warningRed"
        android:onClick="deleteButtonOnClick"/>
</merge>