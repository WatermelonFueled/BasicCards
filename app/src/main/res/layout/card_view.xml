<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_list_item_height"
    android:layout_marginTop="@dimen/card_list_item_margin"
    android:layout_marginLeft="@dimen/card_list_item_margin"
    android:layout_marginRight="@dimen/card_list_item_margin">
    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/stackItemBackground">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/text_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/card_list_item_text_padding"
                android:textSize="40dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/text_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/card_list_item_text_padding"
            android:background="@color/backgroundGrey"
            android:textSize="40dp"/>
    </ViewFlipper>
    <ImageButton
        android:id="@+id/edit_button"
        android:src="@mipmap/ic_mode_edit_white_24dp"
        android:visibility="gone"
        android:layout_width="@dimen/card_list_item_button_width"
        android:layout_height="@dimen/card_list_item_height_half"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/backgroundGrey"
        android:onClick="editButtonOnClick" />
    <ImageButton
        android:id="@+id/delete_button"
        android:src="@mipmap/ic_delete_white_24dp"
        android:visibility="gone"
        android:layout_width="@dimen/card_list_item_button_width"
        android:layout_height="@dimen/card_list_item_height_half"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/deleteRedMuted"
        android:onClick="deleteButtonOnClick"/>
</RelativeLayout>