<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_normal">
    <TextView
        android:id="@+id/substackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:paddingLeft="4dp"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:text="Substack:"/>
    <Spinner
        android:id="@+id/substackSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:layout_toRightOf="@+id/substackText">
    </Spinner>
    <Button
        android:id="@+id/addImageButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_below="@+id/substackText"
        android:text="Add Image"/>
    <Button
        android:id="@+id/takePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_below="@+id/substackText"
        android:layout_toRightOf="@+id/addImageButton"
        android:text="Take Photo"/>
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_below="@+id/substackText"
        android:layout_toRightOf="@+id/takePhotoButton"
        />
    <Button
        android:id="@+id/removeImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/thumbnail"
        android:text="X"
        android:clickable="false"/>
    <EditText
        android:id="@+id/inputQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:layout_below="@+id/addImageButton"
        android:hint="Front"/>
    <EditText
        android:id="@+id/inputAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal_half"
        android:layout_below="@+id/inputQuestion"
        android:hint="Back"/>

</RelativeLayout>
